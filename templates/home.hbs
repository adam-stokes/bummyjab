{{> header}}
<div class="col-md-8">
  <h1 class="page-header">Adam Stokes</h1>
  {{#each posts}}
    <div class="row">
      <div class="col-md-3">
        <date class="date">
          {{date this.attributes.date}}
        </date>
      </div>
      <div class="col-md-9">
        <a href="{{link this.path}}">{{this.attributes.title}}</a>
        <p><small>{{this.attributes.tags}}</small></p>
      </div>
    </div>
  {{/each}}
</div>

